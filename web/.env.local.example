# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# For production, use your actual Supabase project URL and keys:
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Supabase Project ID (for type generation)
SUPABASE_PROJECT_ID=your-project-id

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# Production site URL (set this in production to avoid localhost redirects)
NEXT_PUBLIC_SITE_URL=https://cgmtracker.netlify.app/

# Dexcom API Integration
DEXCOM_CLIENT_ID=your-dexcom-client-id
DEXCOM_CLIENT_SECRET=your-dexcom-client-secret
DEXCOM_REDIRECT_URI=https://cgmtracker.netlify.app/auth/dexcom/callback
DEXCOM_API_BASE_URL=https://sandbox-api.dexcom.com/v3  # Use https://api.dexcom.com/v3 for production
DEXCOM_AUTH_BASE_URL=https://sandbox-api.dexcom.com/v2 # Use https://api.dexcom.com/v2 for production

# Encryption key for securing API tokens (generate a random 32-character string)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Optional: Analytics and monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id